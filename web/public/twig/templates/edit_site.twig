{% extends "base.twig" %}

{%- block head -%}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/assets/built-in/js/jquery.plainmodal.min.js"></script>
{% endblock %}

{%- block top_right -%}
    <div class="mod-light">
            <div id="normal-bar">
                <h2>File Manager <span class="js_current_dir">(/)</span></h2> 
                <a style="margin-left: 50px;" href="#" onclick=";$('#new_file').plainModal('open');">
                    <button><img src="/assets/built-in/img/el_file-new.png">Create File</button>
                </a> 
                <a href="#" onclick=";$('#upload_file').plainModal('open');">
                    <button><img src="/assets/built-in/img/fa-solid_upload.png">Upload File</button>
                </a> 
                <a href="#" onclick=";$('#create_folder').plainModal('open');">
                    <button><img src="/assets/built-in/img/ic_sharp-create-new-folder.png">Create Folder</button>
                </a> 
                <a href="#" onclick=";open_preview();">
                    <button><img src="/assets/built-in/img/fa-solid_globe-europe.png">Preview</button>
                </a> 
            </div>
            <span class="text" style="margin-left: 32px;width: 95%;">
                {% for file in files_row %}
                    {% if file.id is defined %}
                        {% if file.ext != "" %}
                            {% if (file.parent != "/") %}
                                <img style="width: 16px;" src="/assets/built-in/img/file_browser/{{ file.ext }}.png"> <a href="/site/{{ session.domainname|escape }}{{ current_dir }}{{ file.file_name|escape }}">{{ file.file_name|escape }}</a> 
                            {% else %}
                                <img style="width: 16px;" src="/assets/built-in/img/file_browser/{{ file.ext }}.png"> <a href="/site/{{ session.domainname|escape }}/{{ file.file_name|escape }}">{{ file.file_name|escape }}</a> 
                            {% endif %}
                        {% elseif file.type == "folder" %}
                            <img style="width: 16px;" src="/assets/built-in/img/file_browser/folder.png"> <a href="/edit_site?dir=/{% if current_dir != "" %}{{ current_dir|replace({'/': ''}) }}/{% endif %}{{ file.file_name|escape }}">{{ file.file_name|escape }}</a> 
                        {% endif %}
                        {% if (file.ext == "png") or (file.ext == "jpg") or (file.ext == "jpeg") or (file.ext == "gif") %}
                            <span style="float: right">
                                <a href="/edit_file?file={{ file.file_name|escape }}"><button style="height: 16px;">Edit</button></a> <a href="#" onclick="request_deletion('{{ file.file_name|escape }}');"><button style="height: 16px;">Delete</button></a>
                                <img style="width:16px;height: 14px;" src="/assets/img/{{ file.file_name }}">
                            </span><br>
                        {% else %}
                            {% if file.ext != "" %}
                                {% if (file.parent == "/") %}
                                    <span style="float: right">
                                        <a href="/edit_file?file={{ file.file_name|escape }}"><button style="height: 16px;">Edit</button></a> <a href="#" onclick="request_deletion('{{ file.file_name|escape }}');"><button style="margin-right: 20px;height: 16px;">Delete</button></a>
                                    </span><br>
                                {% else %}
                                    <span style="float: right">
                                        <a href="/edit_file?file={{ file.file_name|escape }}&dir={{ current_dir }}"><button style="height: 16px;">Edit</button></a> <a href="#" onclick="request_deletion('{{ file.file_name|escape }}');"><button style="margin-right: 20px;height: 16px;">Delete</button></a>
                                    </span><br>
                                {% endif %}
                            {% elseif file.type == "folder" %}
                                <span style="float: right">
                                    <a href="#" onclick="request_deletion('{{ file.file_name|escape }}');"><button style="margin-right: 20px;height: 16px;">Delete</button></a>
                                </span><br>
                            {% endif %}
                        {% endif %}
                    {% endif %}
                {% endfor %}
                {% if files_row.rows == 0 %}
                    You have no files. Do you want to <a href="/new_file">make one?</a>
                {% endif %}
            </span>
        </div>
        <script>
            function request_deletion(file) {
                var csrf_token = "{{ form_token() }}";
                var endpoint   = "/request/delete_file";

                console.log(csrf_token + endpoint);

                $.post( endpoint, { file: file, token: csrf_token })
                    .done(function( data ) {
                        location.reload();
                        //actually add alert popup but for now just use this
                });
            }

            function open_preview() {
                preview_window = window.open( `/site/{{ session.domainname }}/index.html`, "Pebbles: Preview Site", "width=480,height=360" );
            }
        </script>
        <div id="new_file" class="modal">
            <form action="/request/make_file{% if current_dir != "" %}?dir={{ current_dir }}{% endif %}" method="POST">
                <span class="text-form">
                    <b>File Name</b><br>
                    Must end with a file extension.<br>
                    {% if current_dir != "" %}
                        This file will be in the {{ current_dir }} folder.<br>
                    {% endif %}
                    <span style="color:red">* this input is required</span>
                </span>
                <input type="text" name="file_name" placeholder="File Name" class="generic-input"><br><br>
                <input type="submit" value="Make File">
            </form>
		</div>

        <div id="upload_file" class="modal">
			<form action="/request/upload_file{% if current_dir != "" %}?dir={{ current_dir }}{% endif %}" method="POST" enctype="multipart/form-data">
                <span class="text-form">
                    <b>File Input</b><br>
                    Must only be an image file.<br>
                    {% if current_dir != "" %}
                        This file will be in the {{ current_dir }} folder.<br>
                    {% endif %}
                    <span style="color:red">* this input is required</span>
                </span>
                <input type="file" name="file_upload" id="file_upload" class="generic-input"><br><br>
                <input type="submit" name="submit" value="Upload File">
            </form>
		</div>

        <div id="create_folder" class="modal">
            <form action="/request/make_folder{% if current_dir != "" %}?dir={{ current_dir }}{% endif %}" method="POST">
                <span class="text-form">
                    <b>Folder Name</b><br>
                    {% if current_dir != "" %}
                        This file will be in the {{ current_dir }} folder.<br>
                    {% endif %}
                    <span style="color:red">* this input is required</span>
                </span>
                <input type="text" name="folder_name" placeholder="Folder Name" class="generic-input"><br><br>
                <input type="submit" value="Make Folder">
            </form>
        </div>
    </div>
{% endblock %}