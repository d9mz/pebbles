<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <title>{{ metadata.og_context.title|escape }}</title>
            <meta property="og:title" content="{{ metadata.og_context.title|escape }}" />
            <meta property="og:description" content="{{ metadata.og_context.description|escape }}" />
            <meta property="og:url" content="{{ metadata.og_context.url|escape }}" />
            <meta property="og:image" content="{{ metadata.og_context.picture|escape }}" />
            <link href="/assets/built-in/css/home.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <div class="site">
            <div class="site-container">
                {% include 'header.twig' %}

                <div class="top-left">
                    {% include 'sidebar.twig' %}
                </div>
                <div class="top-right">
                    <div class="mod-light">
                        <div id="normal-bar">
                            <h2>Create a File</h2>
                        </div>
                        <span class="text">
                            <form action="/request/upload_file{% if current_dir != "" %}?dir={{ current_dir }}{% endif %}" method="POST" enctype="multipart/form-data">
                                <span class="text-form">
                                    <b>File Input</b><br>
                                    Must only be an image file.<br>
                                    {% if current_dir != "" %}
                                        This file will be in the {{ current_dir }} folder.<br>
                                    {% endif %}
                                    <span style="color:red">* this input is required</span>
                                </span>
                                <input type="file" name="file_upload" id="file_upload" class="generic-input"><br><br>
                                <input type="submit" name="submit" value="Upload File">
                            </form>
                        </span> 
                    </div>
                </div>
            </div>
            {% include 'footer.twig' %}
        </div>
    </body>
</html>