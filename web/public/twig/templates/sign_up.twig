{% extends "base.twig" %}

{%- block top_right -%}
    <div class="mod-light">
        <div id="normal-bar">
            <h2>Sign Up</h2>
        </div>
        <span class="text">
            <form action="/request/sign_up" method="POST">
                <span class="text-form">
                    <b>Username</b><br>
                    Your username has to be shorter than 32 characters and longer than 6 characters. It must not contain any special characters.<br>
                    <span style="color:red">* this input is required</span>
                </span>
                <input type="text" name="pebble_username" placeholder="Username" class="generic-input"><br>
                <span class="text-form">
                    <b>Site Name</b><br>
                    Your site name has to be shorter than 32 characters and longer than 6 characters. It must not contain any special characters.<br>
                    This is the way people will access your site.<br>Your site can be accessed like pebbles.cf/~mysitename/<br>
                    <span style="color:red">* this input is required</span>
                </span>
                <input type="text" name="pebble_site_name" placeholder="Site Name" class="generic-input"><br>
                <span class="text-form">
                    <b>Password</b><br>
                    There is no limitation for passwords, but make sure it is secure and safe.<br>
                    <span style="color:red">* this input is required</span>
                </span>
                <input type="password" name="pebble_password" placeholder="Password" class="generic-input"><br><br>
                <input type="submit" value="Sign Up">
            </form>
        </span> 
    </div>
{% endblock %}